{% extends 'base.html.twig' %}
{% block title %}{{ bikeRide.title }}{% endblock %}

{% set hasClusters = bikeRide.getClusters().hasClusters %}

{% block body %}
<div class="wrapper">
    <div class="wrapper-title">
        <h1>{{ bikeRide.title }} - {{ bikeRide.period }}</h1>
        <span class="tools">
            <a href="{{ path('admin_bike_rides', bike_rides_filters) }}" class="btn btn-ico" title="Retour à la liste des sorties"><i class="fas fa-chevron-left"></i></a>
        </span>
        {% if is_granted('ROLE_REGISTER') %}
            <div class="dropdown">
                <button class="dropdown-toggle" type="button" data-toggle="dropdown-tools"></button>
                <div class="dropdown-menu" data-target="dropdown-tools">
                    <ul class="dropdown-body">
                        {% if bikeRide.getClusters().hasFramerCluster() %}
                            <li><a href="{{ path('admin_bike_ride_framer_list', {'bikeRide': bikeRide.entity.id})}}"  class="dropdown-item" title="Voir l'encadrement"><i class="fa-solid fa-user-tie"></i> Voir l'encadrement</a></li>
                        {% endif %}
                        <li><a href="{{ path('admin_session_add', {'bikeRide': bikeRide.entity.id}) }}" class="dropdown-item" title="Ajouter un participant"><i class="fa-solid fa-user"></i> Ajouter un participant</a></li>
                        <li><a href="{{ path('admin_cluster_edit', {'bikeRide': bikeRide.entity.id}) }}" class="dropdown-item" title="Ajouter un goupe"><i class="fa-solid fa-users"></i> Ajouter un groupe</a></li>
                    </ul>
                </div>
            </div>
        {% endif %}
    </div>
    <div id="sessions_container" class="wrapper-body">
        {% for cluster in bikeRide.getClusters().clusters %}
            {% if hasClusters %}
                <div class="cluster-title">
                    <h2>{{ cluster.title }} - <span class="badge badge-info">{{ cluster.usersOnSiteCount }}</span></h2>
                        {% if is_granted('ROLE_REGISTER') %}
                        <div class="dropdown">
                            <button class="dropdown-toggle" type="button" data-toggle="dropdown-tools"></button>
                            <div class="dropdown-menu" data-target="dropdown-tools">
                                <ul class="dropdown-body">
                                    <li><a href="{{ path('admin_cluster_edit', {'bikeRide': bikeRide.entity.id, 'cluster': cluster.id}) }}" class="dropdown-item" title="Renomer"><i class="fa-solid fa-pen-to-square"></i> Renommer</a></li>
                                    {% if 0 == cluster.sessions|length %}
                                        <li><a href="{{ path('admin_cluster_delete', {'cluster': cluster.id}) }}" class="dropdown-item' title="Supprimer"><i class="fa-solid fa-circle-xmark"></i> Supprimer</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endif %} 
            {% if cluster.sessions | length > 0 %}
                <ul>
                    {% for session in cluster.availableSessions %}             
                        {% include 'session/admin/list.html.twig' with {'user': session.user, 'permission': permission} %}
                    {% endfor %}
                </ul>
                {% if hasClusters and cluster.title != constant('App\\Entity\\Cluster::CLUSTER_FRAME') %}
                    <div>
                        {% if not cluster.isComplete %}
                            <a href="{{ path('admin_cluster_export', {'cluster': cluster.id}) }}" class="btn btn-100 btn-success cluster-complete{% if permission < 7 %} disabled{% endif %}" data-cluster-id="{{ cluster.id }}" target="_blank">
                                <i class="fas fa-check"></i> Valider le groupe
                            </a>
                        {% else %}
                            <div class="row row-list">
                                <div class="col-md-9 col-xs-8">
                                    <a href="{{ path('admin_cluster_complete', {'cluster': cluster.id}) }}" class="btn btn-100 btn-danger cluster-complete{% if permission < 7 %} disabled{% endif %}" data-cluster-id="{{ cluster.id }}">
                                        <i class="fas fa-unlock-alt"></i> Déverrouiller le groupe
                                    </a>
                                </div>
                                <div class="col-md-3 col-xs-4">
                                    <a id="cluster_export_{{ cluster.id }}" href="{{ path('admin_cluster_export', {'cluster': cluster.id}) }}" class="btn btn-100 btn-success{% if permission < 7 %} disabled{% endif %}">
                                        <i class="fas fa-file-pdf"></i> Exporter
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            {% else %}
                <p class="padding-10">Auncun inscrit</p>
            {% endif %}
            <br>
        {% endfor %}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Gestion des documentations{% endblock %}

{% block body %}
 <div class="wrapper">
        <div class="wrapper-title">
            <h1>Gestion des documentations</h1>
            {% include 'component/dropdown_settings.html.twig' %}
        </div>
        <div class="wrapper-body">
            <a href="{{ path('admin_documentation_add') }}" class="btn btn-primary" title="Ajouter un documentation"><i class="fas fa-plus"></i> Ajouter une documentation</a>
            {% include 'component/pagination.html.twig' with {'margin': 'bottom'} %}
            <ul 
                class="sortable"
                data-controller="sortable"
                data-sortable-route-value="{{ path('admin_documentation_order', {'documentation': 0}) }}"
            >
                {% for documentation in documentations %}     
                    <li class="sortable-state-default col-list col-list-2btn" data-id="{{ documentation.id }}">
                        <div class="list-item">{{ documentation.name }}</div>
                        <div>
                            <a class="btn btn-primary btn-ico" href="{{ path('admin_documentation_edit', {'documentation': documentation.id})}}" title="Modifier"><i class="fas fa-pencil-alt"></i></a>
                        </div>
                        <div>
                            <a class="btn btn-danger btn-ico modal-trigger" href="{{ path('admin_documentation_delete', {'documentation': documentation.id})}}" title="Supprimer" data-toggle="modal" data-type="danger"><i class="fas fa-times"></i></a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
            {% include 'component/pagination.html.twig' with {'margin': 'top'} %}
        </div>
    </div>
{% endblock %}

<div class="header-container">
    <img src="/images/logo.jpg" alt="vtt évasion ludres">
</div>
{% set menus = header_service.menus() %}
<nav>
    <img class="hidden" src="/images/logo.png" alt="vtt évasion ludres">
    <ul>
        {% for menu in menus %}
            <li>
                <a href="{{ path(menu.route) }}">{{ menu.label }}</a>
                    {% if menu.subMenus is not empty %}
                        <ul class="sub-menu">
                            {% for sub_menu in menu.subMenus %}
                                <li>
                                    <a href="{{ path(sub_menu.route, sub_menu.params) }}">{{ sub_menu.label }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

            </li>
        {% endfor %}
    </ul>
</nav>

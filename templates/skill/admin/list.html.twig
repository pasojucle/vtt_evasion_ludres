{% extends 'base.html.twig' %}

{% block title %}Compétences{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="wrapper-title">
        <h1>Gestion des compétences</h1>
        <div class="tool-group">
            {% include 'component/dropdown_settings.html.twig' %}
            <div class="dropdown">
                    <button class="dropdown-toggle" type="button" data-toggle="dropdown-tools"></button>
                    <div class="dropdown-menu" data-target="dropdown-tools">
                        <ul class="dropdown-body">
                            <li><a href="{{ path('admin_skill_export') }}" class="dropdown-item" title="Exporter toute la liste"><i class="fas fa-file-csv"></i> Exporter la liste</a></li>
                        </ul>
                    </div>
                </div>
            <a href="{{ path('admin_users', {'filtered': 1}) }}"
                class="btn btn-ico" title="Retour à la liste des adhérents">
                <i class="fas fa-chevron-left"></i>
            </a>
        </div>
    </div>
    <div class="wrapper-body">
        <div class="row">
            <div class="col-md-6 form-group" {{ vue_component('ChoiceFilterType', {'className': 'skill_category', 'field': 'category', 'placeholder': "Séléctionner une catégorie"}) }} ></div>
            <div class="col-md-6 form-group" {{ vue_component('ChoiceFilterType', {'className': 'level', 'field': 'level', 'placeholder': "Séléctionner un niveau"}) }}></div>
        </div>
        <ul class="list-group" {{ vue_component('Skill') }}>
            <div class="loader-container">
                <div class="loader"></div>
            </div>
        </ul>
    </div>
</div>
{% endblock %}


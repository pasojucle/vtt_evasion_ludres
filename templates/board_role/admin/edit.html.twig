{% extends 'base.html.twig' %}

{% set title = (boardRole is null) ? 'Ajouter un role' : 'Modifier un role' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
 <div class="wrapper">
    {{ form_start(form) }}
        <div class="wrapper-title">
            <h1 class="font-bold text-3xl">{{ title }}</h1>
            <span class="tools">
                <a href="{{ path('admin_board_role_list') }}" class="btn btn-ico" title="Retour Ã  la liste des roles"><i class="fas fa-chevron-left"></i></a>
            </span>
        </div>
        <div class="wrapper-body">
            <div class="form-group">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(form.board) }}
            </div>
        </div>
        <div class="wrapper-footer">
            {{ form_widget(form.save) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Calendrier des sorties{% endblock %}

{% block background %}
    {% include 'background/backgrounds.html.twig' with {'alt': 'Inscription'} %}
{% endblock %}

{% block body %}
    <div class="wrapper wrapper-medium-width">
        <div class="wrapper-title">
            <h1>Inscription</h1>
        </div>
        <div class="wrapper-body">
            <div class="block background-ligth">
                <div class="block-title bike-ride-date active">
                    <h2>
                        {% if bikeRide.endAt is null %}
                            {{ bikeRide.startAt | format_date(locale='fr', pattern='EEEE d/M/yy') | capitalize}}
                        {% else %}
                            du {{ bikeRide.startAt | format_date(locale='fr', pattern='EEEE d/M/yy') | capitalize}} au {{ bikeRide.endAt | format_date(locale='fr', pattern='EEEE d/M/Y') | capitalize}}
                        {% endif %}
                    </h2>
                </div>
                <div class="block-body">
                    <h3>{{ bikeRide.title }}</h3>
                    <h2 class="alert-warning">{{ unregistrableMessage|raw }}</h2>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

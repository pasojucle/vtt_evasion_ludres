{% extends 'base.html.twig' %}

{% set title = (event is null) ? 'Ajouter une sortie' : 'Modifier une sortie' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
 <div class="wrapper">
        {{ form_start(form) }}
        <div class="block">
            <div class="block-title">
                <h2>{{ title }}</h2>
                <span class="tools">
                    <a href="{{ path('admin_events') }}" class="btn btn-secondary btn-ico" title="Retour Ã  la liste des sorties"><i class="fas fa-chevron-left"></i></a>
                </span>
            </div>
            <div class="block-body">

                {{ form_row(form.title) }}
                {{ form_row(form.content) }}

                <div class="form-group">
                    {{ form_row(form.startAt) }}
                    {{ form_row(form.endAt) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.displayDuration) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.closingAt) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.minAge) }}
                </div>
            </div>
            <div class="block-footer">
                {{ form_row(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

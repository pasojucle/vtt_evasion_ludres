{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
 <div class="wrapper">
    <div class="block">
        <div class="block-title">
            <h2>{{ event.title }}</h2>
            <span class="tools">
                <a href="{{ path('admin_events', events_filters) }}" class="btn btn-secondary btn-ico" title="Retour à la liste des sorties"><i class="fas fa-chevron-left"></i></a>
            </span>
        </div>
        <div class="block-body">
            {% for cluster in event.clusters %}
                {% set hasGroups = event.clusters| length > 1 %}
                {% if hasGroups %}
                    <h3>{{ cluster.title }}</h3>
                {% endif %}      
                <ul>
                    {% for session in cluster.sessions %}                
                        <li>
                            <div class="row row-list">
                                <div class="col-md-1">
                                    {% if session.isPresent %}
                                        <span class="success"><i class="fas fa-check-circle"></i></span>
                                    {% else %}
                                        <span class="alert-danger "><i class="fas fa-times-circle"></i></span>
                                    {% endif %}
                                </div>
                                <div class="col-md-5">{{ session.user.firstIdentity.name }} {{ session.user.firstIdentity.firstName }}</div>
                                <div class="col-md-4">
                                    {% if session.isPresent %}
                                        <a href="{{ path('admin_session_present', {'session': session.id}) }}" class="btn btn-danger btn-ico" title="Absent"><i class="fas fa-check-circle"></i></a>
                                    {% else %}
                                        <a href="{{ path('admin_session_present', {'session': session.id}) }}" class="btn btn-success btn-ico" title="Présent"><i class="fas fa-times-circle"></i></a>
                                    {% endif %}
                                    {% if hasGroups %}<a href="{{ path('admin_event_switch_cluster', {'session': session.id}) }}" class="btn btn-primary btn-ico" title="Changer de groupe"><i class="fas fa-exchange-alt"></i></a>{% endif %}
                                    <a href="{{ path('admin_user', {'user': session.user.id}) }}" class="btn btn-primary btn-ico" title="Informatons sur l'adhérent"><i class="fas fa-user"></i></a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% set title = (category is null) ? 'Ajouter une categorie' : 'Modifier une catégorie' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="wrapper">
        {{ form_start(form) }}
            <div class="wrapper-title">
                <h1>{{ title }}</h1>
                <span class="tools">
                    <a href="{{ path('admin_category_list') }}" class="btn btn-ico" title="Retour à la liste des catégorie"><i class="fas fa-chevron-left"></i></a>
                </span>
            </div>
            <div class="wrapper-body">
                <div class="form-group">
                    {{ form_row(form.name) }}
                </div>
            </div>
            <div class="wrapper-footer">
                {{ form_widget(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

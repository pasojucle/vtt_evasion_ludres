{% extends 'base.html.twig' %}

{% block title %}Gestion des categories{% endblock %}

{% block body %}
 <div class="wrapper">
        <div class="wrapper-title">
            <h1>Gestion des categories</h1>
        </div>
        <div class="wrapper-body">
            <a href="{{ path('admin_category_edit') }}" class="btn btn-primary" title="Ajouter un niveau"><i class="fas fa-plus"></i> Ajouter un niveau</a>
            <ul>
                {% for category in categories %}     
                    <li class="col-list col-list-2btn">
                        <div class="list-item">{{ category.name }}</div>
                        
                        {% if is_granted('ROLE_ADMIN') %}
                        <div>
                            <a class="btn btn-primary btn-ico" href="{{ path('admin_category_edit', {'category': category.id})}}" title="Modifier"><i class="fas fa-pencil-alt"></i></a>
                        </div>
                        <div>
                            <a class="btn btn-danger btn-ico modal-trigger" href="{{ path('admin_category_delete', {'category': category.id})}}" title="Supprimer" data-toggle="modal" data-type="danger"><i class="fas fa-times"></i></a>
                        </div>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Outil{% endblock %}

{% block body %}
    <div class="wrapper">
        {{ form_start(form) }}
        <div class="block">
            <div class="block-title">
                <h2>Envoyer une notification d'erreur sur une inscription</h2>
            </div>
            <div class="block-body">
                <div class="form-group">
                    {{ form_row(form.user) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.content) }}
                </div>
            </div>
            <div class="block-footer">
                {{ form_row(form.submit, {'label': 'Envoyer'}) }}
            </div>
        </div>
        {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ second_hand.name }}{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="wrapper-title">
            <h1>Annonces d'occasion</h1>
            <span class="tools">
                <a href="{{ path('admin_second_hand_list', {'valid': second_hand.valid|parseInt}) }}" class="btn btn-ico" title="Retour Ã  la liste des annonces">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </span>
        </div>
        <div class="wrapper-body">
            <div class="row row-align-top">
                <div class="col-md-5 col-xs-12"> 
                    <img class="second-hand" src="{{ second_hand.pathName }}" alt="{{ second_hand.filename }}">  
                </div>
                <div class="col-md-1 "></div>
                <div class="col-md-6 col-xs-12">
                    <h2>{{ second_hand.name }}</h2>
                    <br>
                    <div class="detail">
                        <p>{{ second_hand.createdAt }}</p>
                    </div>
                    <div class="detail">
                        <h3>Descriptif</h3>
                        <p>{{ second_hand.content|raw}}<p>
                        <p class="price">{{ second_hand.price }}</p>
                    </div>
                    <div class="detail">
                        <h3>Categorie</h3>
                        <p>{{ second_hand.category }}<p>
                        
                    </div>
                    <div class="detail">
                        <h3>Contact</h3>
                        <p>{{ second_hand.user.member.fullName }}</p>
                        <p>{{ second_hand.user.member.email }}</p>
                        <p>{{ second_hand.user.member.phone }}</p>
                    </div>
                </div>         
            </div>
        </div> 
        <div class="wrapper-footer">
            {% if not second_hand.valid %}
                <a class="btn btn-success" href="{{ path('admin_second_hand_validate', {'secondHand': second_hand.id})}}" title="Valider"><i class="fas fa-check"></i> Valider</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
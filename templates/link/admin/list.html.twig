{% extends 'base.html.twig' %}

{% block title %}Gestion des liens{% endblock %}

{% block body %}
 <div class="wrapper">
        <div class="block">
            <div class="block-title">
                <h2>Gestion des liens</h2>
                <span class="tools">
                    <a href="{{ path('admin_link_edit') }}" class="btn btn-secondary btn-ico" title="Ajouter un lien"><i class="fas fa-plus"></i></a>
                </span>
            </div>
            <div class="block-body">
                <ul>
                    {% for link in links %}     
                        <li>
                            <div>
                            <a href="{{ path('admin_link_edit', {'link': link.id})}}" class="btn btn-list btn-light" title="Modifier le lien">
                                <div class="row row-list">
                                    <div class="col-md-4 col-xs-6">{{ link.url }}</div>
                                    <div class="col-md-8 col-xs-6">{{ link.title }}</div>
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% include('common/pagination.html.twig') %}
    </div>
{% endblock %}

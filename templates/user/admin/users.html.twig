{% extends 'base.html.twig' %}

{% block title %}Calendrier des sorties{% endblock %}

{% block body %}
 <div class="wrapper">
        <div class="block">
            <div class="block-title">
                <h2>Gestion des adhérents</h2>
            </div>
            <div class="block-body">
                {{ form_start(form) }}
                <ul class="filters">
                    <li>
                        {{ form_widget(form.fullName)}}
                    </li>
                    <li>
                        {{ form_widget(form.category)}}
                    </li>
                    <li>
                        {{ form_widget(form.level)}}
                    </li>

                </ul>
                {{ form_end(form) }}
                <ul>
                    {% for user in users %}     
                        {% set licence = user.seasonLicence(licence_service.currentSeason) %}           
                        <li>
                            <div class="row">
                                <div class="col-1">
                                    {% if licence %}
                                        <span class="success"><i class="fas fa-check-circle"></i></span>
                                    {% else %}
                                        <span class="alert-danger "><i class="fas fa-times-circle"></i></span>
                                    {% endif %}
                                </div>
                                <div class="col-4">{{ user.fullName }}</div>
                                <div class="col-2">{{ constant('App\\Entity\\Licence::CATEGORIES')[licence.category]  | trans}}</div>

                                <div class="col-3">{{ user.level.title }}</div>
                                <div class="col-2">
                                    <a href="" class="btn btn-primary btn-ico" title="Informatons sur l'adhérent"><i class="fas fa-user"></i></a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% include('common/pagination.html.twig') %}
    </div>
{% endblock %}

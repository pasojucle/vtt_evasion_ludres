{% extends 'base.html.twig' %}

{% block title %}Calendrier des sorties{% endblock %}

{% block body %}
 <div class="wrapper">
        <div class="block">
            <div class="block-title">
                <h2>Gestion des adhérents</h2>
            </div>
            <div class="block-body">
                {{ form_start(form) }}
                <ul class="filters row">
                    <li>
                        {{ form_widget(form.fullName)}} {{ form_widget(form.submit)}}
                    </li>
                    <li>
                        {{ form_widget(form.category)}}
                    </li>
                    <li>
                        {{ form_widget(form.level)}}
                    </li>

                </ul>
                {{ form_end(form) }}
                <ul>
                    {% for user in users %}     
                        {% set licence = user.seasonLicence(licence_service.currentSeason) %}           
                        <li>
                            <div>
                            <a href="{{ path('admin_user', {'user': user.id})}}" class="btn btn-list" title="Informatons sur l'adhérent" style="background-color: {{ user.level.color }}">
                                <div class="row row-list">
                                    <div class="col-1 col-xs-1">
                                        {% if licence %}
                                            <span class="success"><i class="fas fa-check-circle"></i></span>
                                        {% else %}
                                            <span class="alert-danger "><i class="fas fa-times-circle"></i></span>
                                        {% endif %}
                                    </div>
                                    <div class="col-9 col-xs-8">{{ user.member.fullName }}</div>
                                    <div class="col-2 col-xs-3">{{ constant('App\\Entity\\Licence::CATEGORIES')[licence.category]  | trans}}</div>
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% include('common/pagination.html.twig') %}
    </div>
{% endblock %}

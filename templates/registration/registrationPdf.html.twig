            {{ registration_document_steps[key]['header']|imgPath(media)|raw|nl2br }}
        {% endif %}
        {# <div class="block"> #}
            {% set key = constant('App\\Form\\UserType::FORM_HEALTH') %}
            {% set health = registration_document_steps[key] is defined %}

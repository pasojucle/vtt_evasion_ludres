{% extends 'base.html.twig' %}

{% set title = (level is null) ? 'Ajouter un niveau' : 'Modifier un niveau' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="wrapper">
        {{ form_start(form) }}
            <div class="wrapper-title">
                <h1>{{ title }}</h1>
                <span class="tools">
                    <a href="{{ path('admin_levels') }}" class="btn btn-ico" title="Retour Ã  la liste des niveaux"><i class="fas fa-chevron-left"></i></a>
                </span>
            </div>
            <div class="wrapper-body">
                <div class="form-group">
                    {{ form_row(form.title) }}
                </div>
                {{ form_row(form.content) }}
                <div class="form-group">
                    {{ form_row(form.color) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.type) }}
                </div>
                {{ form_row(form.accompanyingCertificat) }}
            </div>
            <div class="wrapper-footer">
                {{ form_widget(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

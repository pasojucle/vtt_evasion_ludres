{% extends 'base.html.twig' %}

{% set title = (message is null) ? 'Ajouter un message' : 'Modifier un message' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="wrapper">
        {{ form_start(form) }}
            <div class="wrapper-title">
                <h1>{{ title }}</h1>
                <span class="tools">
                    <a href="{{ path('admin_message_list', {'section': sectionId}) }}" class="btn btn-ico" title="Retour Ã  la liste des niveaux"><i class="fas fa-chevron-left"></i></a>
                </span>
            </div>
            <div class="wrapper-body">
                <div class="form-group">
                    {{ form_row(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.label) }}
                </div>
                {{ form_row(form.content) }}
                <div class="form-group">
                    {{ form_row(form.section) }}
                    {{ form_row(form.levelType) }}
                </div>
            </div>
            <div class="wrapper-footer">
                {{ form_widget(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

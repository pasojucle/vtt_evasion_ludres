{% extends 'base.html.twig' %}

{% block title %}Mon pannier{% endblock %}

{% block body %}
    <div class="wrapper wrapper-small-width background-green background-color">
        <div class="wrapper-title">
            <h1>Mon panier</h1>
        </div>
        <div class="wrapper-body">
            <ul>
                {% for line in view.orderLines.lines %}
                    <li class="row row-list">
                        <div class="col-md-2 col-xs-3">
                            <a href="{{ path('product_show', {'product': line.product.id}) }}">
                                <div class="thumbnail"><img class="" src="{{ line.product.pathName }}" alt=""> </div>
                            </a>
                        </div>
                        <div class="col-md-5 col-xs-4">
                            {{ line.product.name }}<br>
                            {{ line.product.ref }}<br>
                            Taille : {{ line.size }}<br>
                            Prix/unitaire : {{ line.product.price }}
                        </div>
                        <div class="col-md-2 col-xs-2 align-right">{{ line.quantity }}</div>
                        <div class="col-md-3 col-xs-2 align-right">{{ line.amount }}</div>
                    </li>

                {% endfor %}
            </ul>
            <div class="row">
                <div class="col-md-10 col-xs-10 align-right">Total :</div>
                <div class="col-md-2 col-xs-10  align-right">{{ view.amount }}</div>
            </div>
        </div>
        <div class="wrapper-footer">
            <a href="{{ path('products') }}" class="btn btn-secondary float-right">Retour Ã  la boutique</a>
        </div>
    </div>
{% endblock %}

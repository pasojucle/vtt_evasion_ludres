<div class="row row-align-top">
    <div class="{{ content.contentStyleMd }} col-xs-12">{{ content.content | raw}}</div>
    {% if content.fileName is not null %}
        <div class="col-md-3 col-xs-12" data-ratio="{{ content.fileRatio }}">
        {% if content.fileTag == 'img' %}
            <img src="{{ content.fileName }}">
        {% else %}
            <object class="sizing" width="100%" height="250" type="application/pdf" data="{{ content.fileName }}">
                <p>Le fichier PDF ne peut pas être affiché avec ce navigateur.</p>
            </object>
        {% endif %}
        </div>
    {% endif %}
    {% if content.url is not null %}
        <div class="col-md-3 col-xs-12 align-self-center"><a class="btn btn-secondary btn-full-width" href="{{ content.url }}">{{ content.buttonLabel }}</a></div>
    {% endif %}
</div>
{% extends 'base.html.twig' %}

{% block title %}Aide à la connexion{% endblock %}

{% block stylesheets %}
    {{ parent()}}
{% endblock %}

{% block body %}
    <div class="wrapper background-red background-color col-content">
        <div is="my-carrousel" class="wrapper-img slider">
            {% for background in content.backgrounds %}
                <picture>
                    <source media="(max-width: 400px)" srcset="../images/background/landscape_xs/{{ background.filename }}">
                    <source media="(max-width: 800px)" srcset="../images/background/landscape_md/{{ background.filename }}">
                    <img src="../images/background/square/{{ background.filename }}" alt="le club">
                </picture>
            {% endfor %}
        </div>
        <div class="wrapper-content">
            <h1>Aide à la connexion</h1>
            {{ content.content | raw}}
            <div class="content-footer">
                <a class="btn btn-red btn-xl" href="{{ path('app_login') }}"><i class="fas fa-chevron-circle-right"></i> Se connecter</a>
            </div>
        </div>
    </div>
{% endblock %}
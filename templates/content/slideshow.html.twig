{% extends 'base.html.twig' %}

{% block title %}Diaporama{% endblock %}

{% block body %}
    <div class="wrapper" 
        data-controller="slideshow"
        data-slideshow-latest-view-value="{{ latestView }}"
        data-slideshow-ws-images-value="{{ path('slideshow_images', {'latestView': 0}) }}"
        data-slideshow-ws-logs-value="{{ path('log_write') }}"
    >
        <div class="slideshow" data-slideshow-target="slideshow">
            <div class="frame" data-slideshow-target="frame"></div>
            <a class="btn-slide slide-to-right" data-slideshow-target="btnRight"><i class="fa-solid fa-chevron-left"></i></a>
            <a class="btn-slide slide-to-left" data-slideshow-target="btnLeft"><i class="fa-solid fa-chevron-right"></i></a>
            <a class="btn-slide full-screen" data-slideshow-target="fullScreen"><i class="fa-solid fa-maximize"></i></a>
        </div>
        <div class="d-none" >
            {{ form_start(form, {'attr': {'data-slideshow-target':'formLog'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
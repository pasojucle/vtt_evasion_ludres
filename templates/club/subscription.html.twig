{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    <link rel="stylesheet" type="text/css" href="/css/verticalStepProgress.css">
{% endblock %}
{% block body %}
    {% set current = progress.steps[step] %}
    <div class="wrapper col-3">
        <div class="block-left">
        </div>
        <div class="block">
            <div class="block-title">
                <h2>{{ current.title }}</h2>
            </div>
            <div class="block-body">
                {% if current.filename is not null %}
                    <div>
                        <object width="100%" height="1470" type="application/pdf" data="/files/{{current.filename}}#toolbar=0&navpanes=0&scrollbar=0">
                        <p>Le fichier PDF ne peut pas être affiché avec ce navigateur.</p>
                        </object>
                    </div>

                {% endif %}
            </div>
            <div class="block-footer">
                {% if progress.prev is not null %}
                    <a class="btn btn-primary float-left" href="{{ path('subscription', {'type': type, 'step': progress.prev }) }}">Précedent</a>
                {% endif %}
                {% if progress.next is not null %}
                    <a class="btn btn-primary float-right" href="{{ path('subscription', {'type': type, 'step': progress.next }) }}">Suivant</a>
                {% endif %}
            </div>
        </div>
        <div class="block-right">
            <ul class="StepProgress">
                {% for step in progress.steps %}
                    <li class="StepProgress-item {{ step.class }}"><strong>{{ step.title }}</strong></li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

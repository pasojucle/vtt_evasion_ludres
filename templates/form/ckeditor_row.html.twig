{% block ckeditor_row %}
    <div {% if form.vars.row_attr.class is defined %}class="{{ form.vars.row_attr.class }}"{% endif %}>
        <div {{ react_component('Ckeditor', {
            'id': form.vars.id,
            'label': form.vars.label, 
            'value': form.vars.value, 
            'name': form.vars.full_name, 
            'upload_url': form.vars.upload_url,
            'toolbar': form.vars.toolbar,
            'environment': form.vars.environment,
            'required_value': form.vars.required,
        }) }}></div>
    </div>
{% endblock %}
{% block btn_radio_row %}
    {% for child in form.children %}
        <div class="btn-radio-group">
            {{ form_widget(child) }}
            <label class="label" for="{{ child.vars.id }}" 
                {% if child.vars.value == form.vars.value %}style="background-color: var(--{{ child.vars.attr['data-color'] }});"{% endif %}>
                {{ child.vars.label }}
            </label>
        </div>
    {% endfor %}
{% endblock %}
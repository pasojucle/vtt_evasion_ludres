{% block custom_file_row %}
    {% set class = (form.vars.row_attr.class is defined) ? form.vars.row_attr.class : 'form-group' %}
    <div class="{{ class }}">
        <button class="input-file-button btn btn-secondary" type="button"><i class="fa-solid fa-file-arrow-up"></i> {{ form.vars.label}}</button>
        <p id="filename">{{ form.vars.value }}</p>  
        {{ form_widget(form, {'attr':{'class': 'input-file'}}) }}   
        {{ form_errors(form) }} 
    </div>
{% endblock %}
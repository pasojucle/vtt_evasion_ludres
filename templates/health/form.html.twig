<div class="form-group">
    {{ form_row(form.socialSecurityNumber) }}
</div>
<div class="form-group">
    {{ form_row(form.mutualCompany) }}
    {{ form_row(form.mutualNumber) }}
</div>
<div class="form-group">
    {{ form_row(form.bloodGroup) }}
    {{ form_row(form.tetanusBooster) }}
</div>
<div class="form-group">
    {{ form_row(form.doctorName) }}
    {{ form_row(form.doctorPhone) }}
</div>
<div class="form-group">
    {{ form_row(form.doctorAddress) }}
    {{ form_row(form.doctorTown) }}
</div>

{% set type = '' %}
{% for disease in form.diseases %}
    {% if type != disease.vars.value.type %}
        {% set type = disease.vars.value.type %}
        <b>{{ constant('App\\Entity\\Disease::TYPES')[type] | trans }}</b>
    {% endif %}
    <div class="form-group">
        {{ form_widget(disease.children.active)}}
        <div class="widget-inline disease-label{% if disease.vars.value.label == constant('App\\Entity\\Disease::LABEL_OTHER') %} disease-label-other{% endif %}">
            {{ constant('App\\Entity\\Disease::LABELS')[disease.vars.value.label] | trans }}
        </div>
        {% if disease.children.title is defined %}
            {{ form_widget(disease.children.title) }}
        {% endif %}
        {{ form_widget(disease.children.curentTreatment) }}

        {% if disease.children.emergencyTreatment is defined %}
            {{ form_widget(disease.children.emergencyTreatment) }}
        {% endif %}
    </div>
{% endfor %}
{% extends 'base.html.twig' %}

{% block title %}Gestion des assurances{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="wrapper-title">
            <h1 class="font-bold text-3xl">Gestion des assurances {{ app.session.get('currentSeason') }} - <span class="badge badge-info">{{ paginator.total }}</span></h1>
            <div class="dropdown">
                <button class="dropdown-toggle" type="button" data-toggle="dropdown-tools"></button>
                <div class="dropdown-menu" data-target="dropdown-tools">
                    <ul class="dropdown-body">
                        <li><a 
                            class="dropdown-item" 
                            data-controller="email-to-clipboard"
                            data-action="click->email-to-clipboard#emailToClipboard"
                            data-email-to-clipboard-url-value="{{ path('admin_coverages_email_to_clipboard') }}" 
                            title="Copier les emails de la séléction"><i 
                            class="fas fa-copy"
                        ></i> Copier les emails de la séléction</a></li>
                        <li><a href="{{ path('admin_coverages_export') }}" class="dropdown-item" title="Exporter la sélection"><i class="fas fa-file-csv"></i> Exporter la sélection</a></li>
                    </ul>
                </div>
            </div>
        </div>
        {% include('coverage/admin/_frame_list.html.twig') %}
    </div>
{% endblock %}

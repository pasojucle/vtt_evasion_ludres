{% extends 'base.html.twig' %}

{% block title %}Gestion des surveys{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="wrapper-title">
            <h1 class="font-bold text-3xl">{{ survey.title }}</h1>
            <div class="dropdown">
                <button class="dropdown-toggle" type="button" data-toggle="dropdown-tools"></button>
                <div class="dropdown-menu" data-target="dropdown-tools">
                    <ul class="dropdown-body">
                        <li><a 
                            class="dropdown-item" 
                            data-controller="email-to-clipboard" 
                            data-action="click->email-to-clipboard#emailToClipboard"
                            data-email-to-clipboard-url-value="{{ path('admin_survey_email_to_clipboard') }}" 
                            title="Copier les emails de la séléction"
                        ><i class="fas fa-copy"></i> Copier les emails de la séléction</a></li>
                    </ul>
                </div>
            </div>
            <span class="tools">
                <a href="{{ path('admin_surveys') }}" class="btn btn-ico" title="Retour à la liste des surveys"><i class="fas fa-chevron-left"></i></a>
            </span>
        </div>
        {% include('survey/admin/_frame_show.html.twig') %}
    </div>        
{% endblock %}

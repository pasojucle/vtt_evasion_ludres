{% extends 'base.html.twig' %}

{% block title %}Sondages{% endblock %}

{% block background %}
    {% include 'background/backgrounds.html.twig' with {'alt': 'Sondage'} %}
{% endblock %}

{% block body %}
    <div class="wrapper wrapper-medium-width">
        <div class="wrapper-title">
            <h1>Sondages</h1>
        </div>
        <div class="wrapper-body">
            <div class="block background-white">
                <div class="block-title">
                    <h2>Sondages</h2>
                </div>
                <div class="block-body">
                    {% if surveys is not empty %}
                        <ul>
                            {% for survey in surveys %}
                                <li>
                                    <div class="row background-ligth list-dropdown mb-20" data-toggle="bike-ride-content">
                                            <div class="col-md-4"><b>{{ survey.title }}</b></div>
                                            {% if survey.id in respondents|keys %}
                                                {% set user_survey = respondents[survey.id]%}
                                                <div class="col-md-5">
                                                    <span class="info">Sondage éffectué le {{ user_survey.createdAt|date('d/m/Y H:i:s') }}</span>
                                                    <div class="mt-10">
                                                        <span title="En savoir plus" class="btn btn-xs" data-action="toggle-down"><i class="fa-solid fa-circle-info"></i> Détail</span>
                                                    </div>
                                                    <div class="info-dropdown"  data-target="bike-ride-content">
                                                        <p>{{ survey.content|raw }}</p>
                                                        <ul class="mt-10">
                                                            {% for response in user_survey.responses %}
                                                            <li class="list">
                                                                <span class="fst-italic">{{ response.issue }} : </span>
                                                                <span>{{ response.value }}</span>
                                                            </li>
                                                            {% endfor %}
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <a href="{{ path('survey', {'survey': survey.id}) }}" class="btn btn-primary"><i class="fas fa-chevron-circle-right"></i> Modifier</a>
                                                </div>
                                            {% else %}
                                                <div class="col-md-5">du {{ survey.startAt|date('d/m/Y') }} au {{ survey.endAt|date('d/m/Y') }}</div>
                                                <div class="col-md-3">
                                                    <a href="{{ path('survey', {'survey': survey.id}) }}" class="btn btn-primary"><i class="fas fa-chevron-circle-right"></i> Participer</a>
                                                </div>
                                            {% endif %}
                                        </div>

                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>Aucun sondage actif actuellement</p>
                    {% endif %}
                </div>    
            </div>
        </div>
    </div>
{% endblock %}

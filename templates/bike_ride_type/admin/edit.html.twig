{% extends 'base.html.twig' %}

{% set title = (bike_ride_type is null) ? 'Ajouter un type de sortie' : 'Modifier un type de sortie' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="wrapper">
        {{ form_start(form) }}
        <div class="block">
            <div class="wrapper-title">
                <h1>{{ title }}</h1>
                <span class="tools">
                    <a href="{{ path('admin_bike_ride_types') }}" class="btn btn-ico" title="Retour Ã  la liste des types de rando"><i class="fas fa-chevron-left"></i></a>
                </span>
            </div>
            <div class="wrapper-body">
                <div class="form-group">
                    {{ form_row(form.name) }}
                </div>
                {{ form_row(form.content) }}
                <div class="form-group switch-group">
                    {{ form_row(form.isRegistrable) }}
                </div>
                <div class="form-group switch-group">
                    {{ form_row(form.isSchool) }}
                </div>
                <div class="form-group switch-group">
                    {{ form_row(form.isCompensable) }}
                </div>
                <div class="form-group switch-group">
                    {{ form_row(form.useLevels) }}
                </div>
                <div class="form-group switch-group">
                    {{ form_row(form.showMemberList) }}
                </div>
            </div>
            <div class="wrapper-footer">
                {{ form_widget(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

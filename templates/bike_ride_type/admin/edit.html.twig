{% extends 'base.html.twig' %}

{% set title = (bike_ride_type is null) ? 'Ajouter un lien' : 'Modifier un lien' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
 <div class="wrapper">
    <div class="padding-10">
        {{ form_start(form) }}
        <div class="block">
            <div class="block-title">
                <h2>{{ title }}</h2>
                <span class="tools">
                    <a href="{{ path('admin_bike_ride_types') }}" class="btn btn-secondary btn-ico" title="Retour Ã  la liste des types de rando"><i class="fas fa-chevron-left"></i></a>
                </span>
            </div>
            <div class="block-body">
                <div class="form-group">
                    {{ form_row(form.name) }}
                </div>
                {{ form_row(form.content) }}
                <div class="form-group switch-group">
                    {{ form_row(form.isRegistrable) }}
                </div>
                <div class="form-group switch-group">
                    {{ form_row(form.isSchool) }}
                </div>
                <div class="form-group switch-group">
                    {{ form_row(form.isCompensable) }}
                </div>
            </div>
            <div class="block-footer">
                {{ form_widget(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

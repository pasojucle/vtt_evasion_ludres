{% extends 'base.html.twig' %}

{% block title %}Gestion des types de randos{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="wrapper-title">
            <h1>Gestion des types de randos</h1>
            <div class="tool-group">
                {% include 'component/dropdown_settings.html.twig' %}
                <a href="{{ path('admin_bike_rides') }}" class="btn btn-ico" title="Retour Ã  la liste des randos"><i class="fas fa-chevron-left"></i></a>

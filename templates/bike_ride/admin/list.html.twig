{% extends 'base.html.twig' %}

{% block title %}Calendrier des sorties{% endblock %}

{% block body %}
 <div class="wrapper">
        <div class="block">
            <div class="block-title">
                <h2>Calendrier des sorties</h2>
                <span class="tools">
                    <a href="{{ path('admin_event_edit') }}" class="btn btn-secondary btn-ico" title="Ajouter une sortie"><i class="fas fa-plus"></i></a>
                </span>
            </div>
            <div class="block-body">
                {% include('bike_ride/filter.html.twig') %}
                <ul>
                    {% for bikeRide in bikeRides %}                      
                        <li>
                            <div class="row row-list">
                                <div class="col-md-10 col-xs-10">
                                    <a class="btn btn-list btn-light" href="{{ path('admin_event_cluster_show', {'event' : bikeRide.id}) }}" title="Voir les participants">
                                        <div class="row">
                                            <div class="col-md-3 col-xs-6">{{ bikeRide.startAt | date('d/m/Y') }}</div>
                                            <div class="col-md-9 col-xs-6">{{ bikeRide.title }}</div>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-md-2 col-xs-2">
                                    <a class="btn btn-primary btn-ico" href="{{ path('admin_event_edit', {'event' : bikeRide.id}) }}" title="Modifier"><i class="fas fa-pencil-alt"></i></a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% include('common/pagination.html.twig') %}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% set title = (background is null) ? 'Ajouter une image de fond' : 'Modifier une image de fond' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="wrapper">
        {{ form_start(form) }}
            <div class="wrapper-title">
                <h1>{{ title }}</h1>
                <span class="tools">
                    <a href="{{ path('admin_background_list') }}" class="btn btn-ico" title="Retour Ã  la gestion des images de fond"><i class="fas fa-chevron-left"></i></a>
                </span>
            </div>
            <div class="wrapper-body">
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <canvas class="media-position" width="350" height="400" data-src="{{ background.path }}" style="border: 1px solid black"></canvas>
                            {{ form_row(form.backgroundFile) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="wrapper-footer">
                {{ form_errors(form) }}
                {{ form_row(form.save) }}
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

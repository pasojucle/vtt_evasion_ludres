{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
    <div class="wrapper wrapper-medium-width background-ligth">
        <div class="wrapper-title">
            <h1>Boutique</h1>
        </div>
        {% include 'component/pagination.html.twig' with {'margin': 'bottom'} %}
        <div class="wrapper-body col-4">
            {% for product in products %}
                <div class="card card-product{% if product.isDisabled %} disabled{% endif %}">
                    <a href="{{ path('product_show', {'product': product.id}) }}">
                        <div class="card-img" style="background-image:url({{ product.pathName }}"></div>
                        <div class="card-body">
                            {{ product.name }}
                            {% if is_granted('PRODUCT_VIEW', product) %}
                                <p>
                                    <span class="{{ product.priceClass }}">{{ product.price }}</span>
                                    {% if product.discountPrice %} <span class="price">{{ product.discountPrice }}</span>{% endif %}
                                </p>
                            {% endif %}
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        {% include 'component/pagination.html.twig' with {'margin': 'top'} %}
    </div>
{% endblock %}

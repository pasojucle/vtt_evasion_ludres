{% if message is defined %}
    <div>{{ message|raw }}</div>
{% endif %}
<div class="row">
    {% for component in components %}
        {% if component.name == 'CollectionType' %}
            {# <div id="{{ component.id }}" class="col-md-12"> #}
                {% for child in component.children %}
                    {# <div class="row"> #}
                        {% for child_component in child %}
                            <div class="form-group {% if child_component.row_attr is not empty %}{{ child_component.row_attr.class}}{% endif %}" {{ vue_component(child_component.name, child_component.props) }}></div>
                        {% endfor %}
                    {# </div> #}
                {% endfor %}
            {# </div>       #}
        {% else %}
            <div class="form-group {% if component.row_attr is not empty %}{{ component.row_attr.class}}{% endif %}" {{ vue_component(component.name, component.props) }}></div>
        {% endif %}
    {% endfor %}
</div>